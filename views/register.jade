extends layout

append header
    script(src='/javascripts/register.js')

append content
    div(class='mainDiv')
        h1= title
        p Register

        div(class='loginDiv well')

            div(class='loginInput')
                span(class='glyphicon glyphicon-user')
                input#inpCreateUsername(placeholder="Username")

            div(class='loginInput')
                span(class='glyphicon glyphicon-lock')
                input#inpCreatePassword(placeholder="Password" type="password")

            div(class='loginInput')
                button#btnCreateAct Sign Up

            div(class='loginInput')
                a(href='/login') Already have an account?
